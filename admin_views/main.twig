{% extends "__content.twig" %}

{% block content %}
    <h1>E-learning system: administration</h1>
    <hr>    
    {{nav|raw}}
    
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Student name</th>
            <th scope="col">Gender</th>
            <th scope="col">Record number</th>            
            <th scope="col">Date of birth</th>
            <th scope="col">Code</th>
            <th scope="col">Editing</th>
          </tr>
        </thead>
        <tbody> 
            {% for student in students %}
                <tr>
                    <td><a href="/mark?record_number={{student.record_number}}">{{student.name}}</a></td>
                    <td>{{student.gender}}</td>
                    <td>{{student.record_number}}</td>
                    <td>{{student.date}}</td>
                    <td>{{student.code}}-{{student.year}}-{{student.number}}</td>
                    <td>
                        <div class="row">
                            <div class="col-2">
                                <form action="/delete" method="POST">
                                    <input type="hidden" name="record_number" value="{{student.record_number}}">
                                    <button type="submit" class="btn">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="col-2">                                
                                <a href="/add_marks?record_number={{student.record_number}}&group_id={{student.group_id}}" style="color: black;"><i class="fa-regular fa-square-plus"></i></a>
                            </div>                                    
                        </div>                                 
                    </td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
