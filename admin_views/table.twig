{% extends "main.twig" %}

{% block table %}
{# {{tables[table_type]}} #}
    <h1>Table </h1> 
    <hr>
    <h3>На этой странице содержится информация из таблицы </h3>
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">Record number</th>
                th scope="col">Student name</th>
                th scope="col">Gender</th>
                th scope="col">Record number</th>
                <th scope="col">Editing</th>
              </tr>
            </thead>
            <tbody> 
                {% for student in students %}
                    <tr>
                        {% for i in 0..8 %}
                            <th>{{student[i]}}</th>
                        {% endfor %}
                            <td>
                                <div class="row">
                                    <div class="col-2">
                                        <form action="/table/{{student.0}}/delete" method="POST">
                                            <input type="hidden" name="id" value="{{student.id}}">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-2">
                                        <form action="/horse-student/{{student.id}}/edit" method="GET">
                                            <input type="hidden" name="id" value="{{student.id}}">
                                            <button type="submit" class="btn btn">
                                                <i class="fa-solid fa-pen"></i>
                                            </button>
                                        </form>
                                    </div>                                    
                                </div>                                 
                            </td>
                    </tr>
                {% endfor %}
            </tbody>
          </table>
    </div>    
{% endblock %}