{% extends "__content.twig" %}

{% block content %}
   <h1>{{header}}</h1>
   <hr>
   <form action="">
        <div class="row g-2">
            <div class="col-3" style="align-self: flex-end;">
                <input type="text" name="subject" class="form-control" placeholder="Subject" value="{{subject}}">
            </div>
            <div class="col-3" style="align-self: flex-end;">
                <input type="text" name="grade" class="form-control" placeholder="grade" value="{{grade}}">
            </div>
            <div class="col-auto" style="align-self: flex-end;">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
    <h4>Results:</h4>
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Subject</th>
            <th scope="col">Grade</th>
            </tr>
                </thead>
                <tbody> 
            {% for object in objects %}
                <tr>
                    {# <th>{{object}}</th> #}
                    {% for i in 0..2 %}
                        <th>{{object[i]}}</th>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
  {# заменить на value на числа #}
{% endblock %}
